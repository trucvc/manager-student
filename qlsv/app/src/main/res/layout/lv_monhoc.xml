<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/layoutMonHoc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-85dp">

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMonHoc"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:padding="8dp"
                android:text="Môn học"
                android:textColor="@color/black"
                android:textSize="26dp" />

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMaMon"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:padding="8dp"
                    android:text="9"
                    android:textColor="#202223"
                    android:textSize="20dp"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="2">

            <Button
                android:id="@+id/btnSinhVien"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:text="Sinh viên" />

            <Button
                android:id="@+id/btnGiaoVien"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="-120dp"
                android:text="Giảng viên"

                />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>