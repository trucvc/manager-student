<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Khoa.KhoaChiTiet">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgbtnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/baseline_arrow_back_ios_24"
                android:backgroundTint="@color/white"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Thông tin khoa"
                android:textSize="25dp"
                android:layout_margin="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/tvMaKhoa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="Mã khoa: "
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/tvMaKhoa1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mã khoa"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:id="@+id/tvTenKhoa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên khoa: "
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tvTenKhoa1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên khoa"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:id="@+id/tvDiaChi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ: "
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tvDiaChi1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/tvSoDT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại: "
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tvSoDT1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"/>
                <ImageButton
                    android:id="@+id/imgbtnGoiDien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_phone_24"
                    android:backgroundTint="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: "
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"/>
                <ImageButton
                    android:id="@+id/imgbtnEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_mail_24"
                    android:backgroundTint="@color/white"/>

                <TextView
                    android:id="@+id/tvEmail1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="Email"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/sua"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/baseline_edit_note_24" />

                <ImageButton
                    android:id="@+id/imgbtnXoa"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/baseline_delete_24" />

                <ImageButton
                    android:id="@+id/imgbtnXuatFile"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/pdf_to" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/bottomNavigationView"
        android:background="@drawable/bottom_bg"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:elevation="2dp"
        app:menu="@menu/buttom_nav_menu"
        app:itemIconSize="30dp"
        app:labelVisibilityMode="unlabeled" />

</RelativeLayout>