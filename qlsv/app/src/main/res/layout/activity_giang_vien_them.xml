<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GiangVien.GiangVienThem">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="650dp"
        tools:ignore="MissingConstraints">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgbtnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/baseline_arrow_back_ios_24"
                android:backgroundTint="@color/white"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm giảng viên"
                android:textSize="25dp"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageAnh"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/student"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvMaGV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã giảng viên: "
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"/>
                <EditText
                    android:id="@+id/edtMaSV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvHoTen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ và tên: "
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"/>
                <EditText
                    android:id="@+id/edtHoTen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvGioiTinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giới tính: "
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"/>
                <RadioButton
                    android:id="@+id/rbtNam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nam"
                    android:layout_marginLeft="60dp"
                    android:textSize="20dp"/>
                <RadioButton
                    android:id="@+id/rbtNu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nữ"
                    android:layout_marginLeft="60dp"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvQueQuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quê quán: "
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"/>
                <EditText
                    android:id="@+id/edtQueQuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"/>
            </LinearLayout>


            <FrameLayout
                android:id="@+id/frame_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSoDT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại: "
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"/>

                <EditText
                    android:id="@+id/edtSoDT"
                    android:layout_width="261dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: "
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"/>

                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="326dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="76dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNgaySinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="Ngày sinh: "
                    android:textSize="20dp" />

                <DatePicker
                    android:id="@+id/datengaySinh"
                    android:layout_width="wrap_content"
                    android:layout_height="131dp"
                    android:layout_gravity="center"
                    android:layout_weight="10"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"></DatePicker>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="18dp"
                android:weightSum="1">

                <Button
                    android:id="@+id/buttonHuy"
                    app:backgroundTint="@null"
                    android:background="@drawable/huy"
                    android:layout_width="150dp"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:text="Hủy"
                    android:layout_weight="0.5"
                    android:layout_margin="10dp"/>

                <Button
                    android:id="@+id/buttonLuu"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/luu"
                    android:text="Lưu"
                    android:textSize="20dp"
                    app:backgroundTint="@null"
                    android:layout_weight="0.5"
                    android:layout_margin="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>